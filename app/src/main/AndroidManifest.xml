<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="cn.yongye.androidability">

    <!--屏幕录制-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidAbility"
        tools:targetApi="31">
        <activity
            android:name=".activity.MainActivity"
            android:taskAffinity=""
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 录屏Service-->
        <service android:name=".screenrecord.service.ScreenRecordService"
            android:enabled="true"
            android:foregroundServiceType="mediaProjection"/>

        <!-- Path涂鸦-->
        <activity android:name=".dooddle.activity.PathActivity"/>

        <!-- 同一个task里新增的activity-->
        <activity android:name=".activitytask.TaskActivity" />
        <!-- 新增一个task，并加入SingleInstanceActivity-->
        <activity android:name=".activitytask.SingleInstanceActivity"
            android:launchMode="singleInstance"/>
    </application>

</manifest>